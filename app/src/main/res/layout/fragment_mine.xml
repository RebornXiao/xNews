<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_background">

        <RelativeLayout
            android:id="@+id/rl_item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_myhead_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_head_logo" />

            <ImageView
                android:id="@+id/iv_sex_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_myhead_logo"
                android:layout_alignRight="@id/iv_myhead_logo"
                android:src="@drawable/my_sex_woman"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_myhead_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_my_menu_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrow_right"
                android:text="-"
                android:textColor="#888888" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_mine_money_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_item_info"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="25dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_info_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_info_money"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="余额（¥）"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_vitality_nums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_vitality_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_vitality_nums"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="活跃度"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_integral_nums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_integral_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_integral_nums"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="积分"
                    android:textColor="#888888"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_des_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_des_money"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="押金（¥）"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:layout_below="@+id/ll_mine_money_detail"
            android:background="#f5f6f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_info_recharge_in"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/view1"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_money_recharge_in"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/enterprise_icon" />

                <TextView
                    android:id="@+id/tv_enterprist_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_money_recharge_in"
                    android:text="充值余额"
                    android:textColor="@color/person_info_setting_items"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_right_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv_money_recharge_in"
                    android:background="@color/mine_devier_color_default" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info_recharge_deposit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/rl_info_recharge_in"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_money_recharge_deposit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/yajin" />

                <TextView
                    android:id="@+id/tv_enterprist_tips_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_money_recharge_deposit"
                    android:text="充值押金"
                    android:textColor="@color/person_info_setting_items"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_right" />

            </RelativeLayout>


            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f5f6f7" />


            <RelativeLayout
                android:id="@+id/item_myshop_treasure"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/item_mycar_use_order"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_goods_treasure_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/goods_activity_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_goods_treasure_logo"
                    android:text="活动记录"
                    android:textColor="@color/person_info_setting_items"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_right" />


            </RelativeLayout>

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/item_myshop_treasure"
                android:background="#f5f6f7" />

            <RelativeLayout
                android:id="@+id/item_ep_manager"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/view_3"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ep_manager_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/enterprise_manager_logo" />

                <TextView
                    android:id="@+id/tv_ep_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_ep_manager_logo"
                    android:text="企业管理"
                    android:textColor="@color/person_info_setting_items"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_right" />


            </RelativeLayout>

            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/item_ep_manager"
                android:background="#f5f6f7" />

            <RelativeLayout
                android:id="@+id/item_mine_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/view_4"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_settings_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mine_settings_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_mine_settings_logo"
                    android:text="设置"
                    android:textColor="@color/person_info_setting_items"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_right" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>